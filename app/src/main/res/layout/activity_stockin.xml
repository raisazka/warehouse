<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="50dp">

    <LinearLayout
        android:layout_marginTop="40dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/box1"/>
        <RelativeLayout
            android:id="@+id/layout_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/item_type_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Item Type"/>

            <View
                android:layout_marginTop="7dp"
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/item_type_title"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_action_dropdown"
                android:layout_marginRight="50dp"
                />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/box"/>
        <RelativeLayout
            android:id="@+id/layout_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp">

            <TextView
                android:id="@+id/item_name_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="Item Name"/>

            <View
                android:layout_marginTop="7dp"
                android:layout_width="200dp"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"
                android:layout_below="@+id/item_name_title"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_action_dropdown"
                android:layout_marginRight="50dp"
                />

        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:paddingHorizontal="60dp">

        <ImageView
            android:id="@+id/substract"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/substract"
            android:layout_marginTop="7dp"
            android:layout_marginRight="30dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/qty_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="qty"
                android:layout_centerInParent="true"
                android:textSize="20dp" />

            <View
                android:layout_marginTop="7dp"
                android:layout_width="70dp"
                android:layout_height="2dp"
                android:background="@android:color/darker_gray"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/qty_title"/>
        </RelativeLayout>

        <ImageView
            android:id="@+id/add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/add"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="30dp"/>

    </LinearLayout>

    <EditText
        android:id="@+id/remarks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:hint="Remarks"/>


        <Button
            android:id="@+id/btn_stockin"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:text="Submit"
            android:paddingVertical="20dp"
            android:paddingHorizontal="30dp"
            android:background="@drawable/rounded_button_stock"
            android:textColor="@android:color/background_light"
            android:layout_gravity="center_horizontal"/>

</LinearLayout>